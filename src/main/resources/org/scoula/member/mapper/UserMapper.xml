<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.member.mapper.UserMapper">

    <select id="selectFirstUser" resultType="org.scoula.member.domain.User">
        SELECT * FROM user LIMIT 1
    </select>

    <insert id="save" parameterType="org.scoula.member.domain.User">
        INSERT INTO user (email, password) VALUES (#{email}, #{password})
    </insert>

    <select id="findByEmail" resultType="org.scoula.member.domain.User">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <update id="updatePassword" parameterType="org.scoula.member.domain.User">
        UPDATE user
        SET password = #{password},
            last_pw_change_at = NOW()
        WHERE email = #{email}
    </update>

</mapper>
